{% extends 'base.html.twig' %}

{% block title %}Modifier un message{% endblock %}

{% block body %}

<div class="container mx-auto my-9 py-8 max-w-sm bg-white p-6 rounded-lg shadow-lg">
    <h1 class="text-xl mb-4 text-center">Modifier un message</h1>
    {{ form_start(form) }}
        <div class="flex flex-col gap-4 justify-center items-center w-full">
            {{ form_widget(form.content) }}
            <button type="submit" class="bg-primary hover:bg-secondary text-white px-3 py-1 rounded">Enregistrer</button>
        </div>
    {{ form_end(form) }}
</div>

{% endblock %}
