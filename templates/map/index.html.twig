{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" src="{{asset('public/js/leaflet/leaflet.css')}}"
{% endblock %}

{% block title %}Les itineraires{% endblock %}

{% block body %}
    <div class="flex h-screen">
        <!-- Carte -->
        <div id="map" class="w-2/3 h-full bg-gray-300"></div>

        <!-- Liste des Stages -->
        <div class="w-1/3 bg-white p-4 overflow-y-auto">
            <h1 class="text-2xl font-bold mb-4">Liste des Stages</h1>
            <ul>
                {% for stage in stages %}
                    <li class="mb-4 border-b pb-2">
                        <h2 class="text-xl font-semibold text-gray-800">{{ stage.title }}</h2>
                        <embed type="html" class="text-gray-600 text-sm">{{ stage.description|raw }}</embed>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('public/js/leaflet/leaflet.js')}}"></script>
    <script src="{{asset('public/js/leaflet-gpx/gpx.js')}}"></script>
{% endblock %}
