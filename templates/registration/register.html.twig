{% extends 'base.html.twig' %}

{% block title %}Inscription | VéloCharbon{% endblock %}

{% block body %}
<div class="flex flex-col min-h-screen bg-gray-100 py-8">
    <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-primary text-center mb-6">Créer un compte</h1>

        {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_row(registrationForm.username, {
                    'attr': {'class': 'w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.email, {
                    'attr': {'class': 'w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe',
                    'attr': {'class': 'w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-primary'}
                }) }}
            </div>
            <div class="mb-4">
                {{ form_row(registrationForm.agreeTerms, {
                    'attr': {'class': 'flex items-center'}
                }) }}
            </div>

            <div class="mt-6 text-center">
                <button type="submit" class="w-full px-4 py-2 text-lg font-medium text-white bg-primary rounded hover:bg-accent">
                    S'inscrire
                </button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
 </div>
{% endblock %}
