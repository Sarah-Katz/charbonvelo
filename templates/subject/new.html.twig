{% extends 'base.html.twig' %}

{% block title %}
  Forum - Nouveau sujet
{% endblock %}

{% block body %}
  <div class="container px-4 mx-auto mt-8">
    <h1 class="text-2xl font-bold mb-4">Créer un nouveau sujet</h1>

    <form method="POST" action="{{ path('app_subject_new', { id: id }) }}" class="flex flex-col drop-shadow-lg bg-background p-4 rounded-lg gap-4">
      <div>
        <label for="title" class="block text-sm font-medium text-primary">Titre</label>
        <input type="text" id="title" name="title" maxlength="50" required class="p-2 mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
        <p class="text-xs text-gray-500 mt-1">50 Caractères maximum</p>
      </div>

      <div>
        <label for="content" class="block text-sm font-medium text-primary">Message</label>
        <textarea id="content" name="content" rows="5" required class="p-2 mt-1 block w-full rounded-md border-gray-700 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50"></textarea>
      </div>

      <div>
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create Subject</button>
      </div>
    </form>
  </div>
{% endblock %}
