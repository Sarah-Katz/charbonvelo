{% extends 'base.html.twig' %}

{% block title %}
  {{ subject.title }}
{% endblock %}

{% block body %}
  <div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-primary text-3xl font-bold">{{ subject.title }}</h1>
      <a href="{{ path('app_category_show', { category: subject.category.id }) }}" class="bg-secondary hover:bg-primary text-white font-bold py-2 px-4 rounded-full">Retour Ã  la liste des sujets</a>
    </div>

    <div class="space-y-6">
      {% for message in subject.messages %}
        {{ include('components/message.html.twig', { message: message, actionPath: path('like_subject_message', { id: message.id }) }) }}
      {% endfor %}
    </div>

    {# Add message Section #}
    <div class="w-full mt-8">{{ include('components/add_message.html.twig', { actionPath: path('app_message_new', { id: subject.id }) }) }}</div>
  </div>
{% endblock %}
