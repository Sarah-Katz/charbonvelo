{% extends 'base.html.twig' %}

{% block title %}
  Nouvel article
{% endblock %}

{% block body %}
  {# Flash messages #}
  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="flash-{{ label }} text-primary font-bold p-4 text-center mb-4 rounded-lg">{{ message }}</div>
    {% endfor %}
  {% endfor %}

  {# Form #}
  <form method="post" enctype="multipart/form-data" class="flex justify-center flex-col w-2/4 pt-8 mx-auto space-y-4">
    <div>
      <label for="title" class="block text-sm font-medium text-gray-700">Titre</label>
      <input type="text" name="title" id="title" required class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
    </div>

    <div>
      <label for="content" class="block text-sm font-medium text-gray-700">Contenu</label>
      <textarea name="content" id="content" required class="p-1 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" rows="5"></textarea>
    </div>

    <div>
      <label for="image" class="block text-sm font-medium text-gray-700">Image</label>
      <input type="file" name="image" id="image" accept="image/jpeg,image/png" class="mt-1 block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-violet-50 file:text-violet-700 hover:file:bg-violet-100" />
      <p class="mt-1 text-sm text-gray-500">JPG ou PNG. Max 2MB.</p>
    </div>

    <button type="submit" class="bg-primary hover:bg-secondary text-white font-bold py-2 px-4 rounded-full">Publier l'article</button>
  </form>
{% endblock %}
